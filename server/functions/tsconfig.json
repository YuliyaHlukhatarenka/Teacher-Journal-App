{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
  },
  "compileOnSave": true,
  "types" : ["jasmine"],
  "include": [
    "src", "public/index.ts"
  ],
  "exclude": [
    "lib"
  ],

}
